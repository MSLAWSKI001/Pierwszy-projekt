<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstProjectMauiApp.MainPage"
             BackgroundImageSource="g_pan.jpg">

    <StackLayout>
        <Label x:Name="messageLabel"/>
        <Entry x:Name="messageEntry"
               />
        <Button Text="Kliknij mnie!"
                BackgroundColor="DarkOrange"
                TextColor="DeepSkyBlue"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"
                />
        <CheckBox IsChecked="False"/>
        <RadioButton/>
        <RadioButton/>
        <RadioButton IsChecked="True"/>
        <Slider Minimum="10"
                Maximum="120"
                ValueChanged="Slider_ValueChanged"
                x:Name="ageSlider"/>
        <Label x:Name="ageLabel"/>

        <Label Text="Wybierz: "/>
        <Picker x:Name="fruitPicker"/>
        <Button Text="Sprawdź"
                Clicked="Favorite_Button_Clicked"/>
        <Label x:Name="favoriteFruitLabel"/>

        <!--<Image Source="dotnet_bot.png"/>-->
        <Image x:Name="ourImage"/>
        <Button Text="Załaduj obrazek"
                Clicked="add_Image"
                />
    </StackLayout>
</ContentPage>

    
    